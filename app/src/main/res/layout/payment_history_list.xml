<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tvDateGroupHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/heading_4_size"
            android:text="00/00/00"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_payment_type_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/primary_text_box_margin"
                android:layout_marginTop="@dimen/primary_text_box_margin"
                android:layout_marginEnd="@dimen/primary_text_box_margin"
                android:layout_marginBottom="@dimen/primary_text_box_margin"
                android:background="@drawable/primary_outline_background" />

            <TextView
                android:id="@+id/tv_payment_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/heading_4_size"
                android:layout_marginStart="@dimen/primary_text_box_margin"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_payment_type_image"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/00"
                android:textSize="@dimen/heading_4_size"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/primary_text_box_margin"
                android:layout_toEndOf="@id/iv_payment_type_image"
                android:layout_below="@id/tv_payment_type_title"
                />

            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="@dimen/heading_4_size"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/primary_text_box_margin"
                android:layout_toEndOf="@id/iv_payment_type_image"
                android:layout_below="@id/tv_payment_date"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_margin"
                android:layout_below="@id/iv_payment_type_image"/>

            <TextView
                android:id="@+id/tvPaymentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/primary_text_box_margin"
                android:text="Amount"
                android:textSize="@dimen/heading_2_size"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>



    </LinearLayout>

