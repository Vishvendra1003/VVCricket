<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.joinContest.MyContestActivity">

    <data>
        <variable
            name="myJoinedContestViewModel"
            type="com.torrex.vcricket.activities.joinContest.MyContestViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/card_elevation_high"
            android:layout_margin="@dimen/primary_card_layout_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/primary_padding">

                    <TextView
                        android:id="@+id/tv_my_contest_league_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/primary_text_box_margin"
                        android:layout_marginEnd="@dimen/primary_text_box_margin"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.matchName}"
                        android:textStyle="bold"
                        android:textSize="@dimen/card_match_home_league_title_size" />

                    <ImageView
                        android:id="@+id/iv_my_contest_team1_image"
                        android:layout_width="@dimen/card_match_home_image_size"
                        android:layout_height="@dimen/card_match_home_image_size"
                        android:layout_alignParentLeft="true"
                        android:layout_marginEnd="@dimen/primary_card_control_margin"
                        android:layout_below="@id/tv_my_contest_league_name"
                        />

                    <TextView
                        android:id="@+id/tv_my_contest_team1_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_my_contest_team1_image"
                        android:text="T1"
                        android:layout_below="@id/tv_my_contest_league_name"
                        android:textSize="@dimen/card_match_home_team_code_size" />

                    <TextView
                        android:id="@+id/tv_my_contest_league_time"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/primary_card_control_margin"
                        android:textStyle="bold"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.matchDate}"
                        android:textSize="@dimen/card_match_home_league_time_size" />

                    <TextView
                        android:id="@+id/tv_my_contest_team1_name"
                        android:layout_width="@dimen/card_match_home_league_team_width"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_my_contest_team1_code"
                        android:layout_toEndOf="@id/iv_my_contest_team1_image"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.team1Name}"
                        android:textSize="@dimen/card_match_home_team_name_size" />

                    <TextView
                        android:id="@+id/tv_my_contest_team1_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/card_match_home_team_name_size"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.team1Score}"
                        android:layout_toEndOf="@id/iv_my_contest_team1_image"
                        android:layout_below="@id/tv_my_contest_team1_name"/>


                    <TextView
                        android:id="@+id/tv_my_contest_team2_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/iv_my_contest_team2_image"
                        android:text="T2"
                        android:layout_below="@id/tv_my_contest_league_name"
                        android:textSize="@dimen/card_match_home_team_code_size" />

                    <ImageView
                        android:id="@+id/iv_my_contest_team2_image"
                        android:layout_height="@dimen/card_match_home_image_size"
                        android:layout_width="@dimen/card_match_home_image_size"
                        android:padding="@dimen/text_padding"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/primary_card_control_margin"
                        android:layout_below="@id/tv_my_contest_league_name"
                        />
                    <TextView
                        android:id="@+id/tv_my_contest_team2_name"
                        android:layout_width="@dimen/card_match_home_league_team_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/card_match_home_team_name_size"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.team2Name}"
                        android:layout_toStartOf="@id/iv_my_contest_team2_image"
                        android:layout_below="@id/tv_my_contest_team2_code"/>

                    <TextView
                        android:id="@+id/tv_my_contest_team2_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/card_match_home_team_name_size"
                        android:text="@{myJoinedContestViewModel.myJoinedContest.team2Score}"
                        android:layout_toStartOf="@id/iv_my_contest_team2_image"
                        android:layout_below="@id/tv_my_contest_team2_name"/>
                </RelativeLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Team:"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_column="1" />
                        <TextView
                            android:id="@+id/tv_my_contest_team_selected"
                            android:hint="Team1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="@{myJoinedContestViewModel.teamSelected}"
                            android:layout_column="2" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Price:"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_column="1" />
                        <TextView
                            android:id="@+id/tv_my_contest_bet_price"
                            android:hint="200"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(myJoinedContestViewModel.myJoinedContest.betPrice)}"
                            android:layout_column="1" />
                    </TableRow>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TableRow>
                        <TextView
                            android:text="Match Status:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1" />
                        <TextView
                            android:id="@+id/tv_my_contest_status"
                            android:hint="Finish"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{myJoinedContestViewModel.myJoinedContest.matchStatus}"
                            android:layout_column="1" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1" />
                        <TextView
                            android:id="@+id/tv_my_contest_bet_status"
                            android:hint="Win"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{myJoinedContestViewModel.myJoinedContest.userStatus}"
                            android:layout_column="1" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ListView
            android:id="@+id/lv_score_card"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_margin="@dimen/primary_layout_margin"
            android:background="@drawable/primary_outline_background"
            android:numColumns="2"
            />



    </LinearLayout>
</layout>