<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.joinContest.MyContestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_contest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:listitem="@layout/my_contest_list_layout" />

        <TextView
            android:id="@+id/tv_no_contest_joined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_contest_joined"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="@dimen/heading_2_size"
            android:padding="3dp"
            android:visibility="gone"/>
    </LinearLayout>
</layout>