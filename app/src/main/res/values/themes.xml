<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VCricket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_gray</item>
        <item name="colorPrimaryVariant">@color/theme_light_gray</item>
        <item name="colorOnPrimary">@color/theme_dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_light_gray</item>
        <item name="colorSecondaryVariant">@color/theme_extra_dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VCricket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VCricket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VCricket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>