<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/extra_light_grey"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>

            <item
                android:bottom="4dp"
                android:right="2dp">
                <shape
                    android:shape="rectangle">
                    <adding android:bottom="5dp"/>
                    <gradient
                        android:angle="360"
                        android:startColor="@color/light_grey"
                        android:endColor="@color/dark_grey"
                        android:type="linear"
                        />
                    <corners android:radius="50dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>

        </layer-list>
    </item>


</selector>
